<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:local="using:AuthoringToolBeta.Views"

             x:Class="AuthoringToolBeta.Views.TimelineView"
             xmlns:vm="using:AuthoringToolBeta.ViewModels"
             x:DataType="vm:TimelineViewModel">

  <Border BorderBrush="Gray" BorderThickness="1">
    <Grid RowDefinitions="Auto, *">

      <Border Grid.Row="0" Background="#333333" Height="30">
        <TextBlock Text="00:00:00          00:00:01          00:00:02          00:00:03"
                   Foreground="White"
                   VerticalAlignment="Center"
                   Margin="10,0"/>
      </Border>

      <ScrollViewer Grid.Row="1">
        <StackPanel>
          <Border Height="50" Background="#555555" BorderBrush="#444444" BorderThickness="0,0,0,1"
                DragDrop.AllowDrop="True" DragDrop.DragEnter="Track_DragEnter" DragDrop.Drop="Track_Drop">
            <ItemsControl ItemsSource="{Binding Clips}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:ClipView />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
        
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

            </ItemsControl>
          </Border>

          <Border Height="50" Background="#555555" BorderBrush="#444444" BorderThickness="0,0,0,1"
                  DragDrop.AllowDrop="True" DragDrop.DragEnter="Track_DragEnter" DragDrop.Drop="Track_Drop">
             <Canvas>
                <TextBlock Text="音声トラック 1" Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
             </Canvas>
          </Border>
          
          <Border Height="50" Background="#555555" BorderBrush="#444444" BorderThickness="0,0,0,1"
                  DragDrop.AllowDrop="True" DragDrop.DragEnter="Track_DragEnter" DragDrop.Drop="Track_Drop">
              <Canvas>
                <TextBlock Text="テロップトラック 1" Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
              </Canvas>
          </Border>
        </StackPanel>
      </ScrollViewer>

    </Grid>
  </Border>
</UserControl>